<link rel="stylesheet" href="/css/user.css" media="screen" title="no title">
<div class="col-xs-offset-2 col-xs-8">
	<div class="row">
		<div class="col-xs-10 profile-div">
			{{> userprofileheader user}}
		</div>
		<div class="col-xs-2">
		  {{#if_eq user._id auth._id}}
				<a href="/user/settings">Update Settings</a>
			{{/if_eq}}
		</div>
	</div>
	<div class="row">
		<h2>Groups</h2>
		{{#if groupSubList.length}}
		  <ul class="list-group">
		    {{#each groupSubList}}
					<li class="list-group-item">
						{{> grouplink this.group}}
					</li>
				{{/each}}
		  </ul>
		{{else}}
			<h4>
				{{user.username}} is not a part of any groups.
			</h4>
		{{/if}}
	</div>
</div>
